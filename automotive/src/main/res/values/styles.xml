<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="CarToolbarNavButton" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@android:color/white</item>
        <item name="android:background">@drawable/sign_in_toolbar_back_ripple_background</item>
        <item name="android:minWidth">@dimen/sign_in_toolbar_nav_button_size</item>
    </style>

        <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
            <!-- this color is used for seek bar during playback for example -->
            <item name="colorAccent">@color/colorAccent</item>
            <item name="android:textSize">@dimen/primary_text_size</item>
        </style>

    <style name="CarButton" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:ellipsize">none</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="android:paddingStart">@dimen/button_padding</item>
        <item name="android:paddingEnd">@dimen/button_padding</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/default_button_background</item>
        <item name="android:textAppearance">@style/SecondaryText.Dark</item>
    </style>

    <style name="CarButton.SignIn">
        <item name="android:background">@drawable/sign_in_button_background</item>
    </style>

    <style name="CarButton.GoogleSignIn">
        <item name="android:background">@drawable/google_sign_in_button_background</item>
    </style>

    <style name="DisplayText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/display_text_size</item>
    </style>

    <style name="PrimaryText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/primary_text_size</item>
    </style>

    <style name="SecondaryText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/secondary_text_size</item>
    </style>

    <style name="SecondaryText.Dark">
        <item name="android:textColor">@color/car_text_dark</item>
    </style>

</resources>
